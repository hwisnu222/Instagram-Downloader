            </form>

        </section>

    </div>
    <div class="container-two">
        <section>
            <h3>Save The Image</h3>
            <img src={{imgSource}} class="image" alt="">
            <div class="buttonbox">
                <a href={{imgSource}}><Button class="button">Download</Button></a>
            </div>
        </section>
    </div>
    <footer>
        <a href="#">
            <h4>Instagram Downloader</h4>
        </a>
        <div class="social">
            <a href="#"><i class="fa fa-instagram fa-lg" aria-hidden="true"></i></a>
            <a href="#"><i class="fa fa-github fa-lg" aria-hidden="true"></i></a>
            <a href="#"><i class="fa fa-pinterest fa-lg" aria-hidden="true"></i></a>
